generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model VehicleOwner {
  id                 Int      @id @default(autoincrement())
  firstName          String
  lastName           String
  address            String
  phone              String   @unique
  nic                String   @unique
  email              String   @unique
  password           String
  verificationStatus Boolean
  otp                String
  dateRegistered     DateTime
}

model AuditLog {
  eventId   Int      @id @default(autoincrement())
  date      DateTime @default(now())
  userId    Int
  eventType String
  content   Json
}

model Admin {
  adminId  Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  role     String
}

model Mechanic {
  mechanicId         Int      @id @default(autoincrement())
  name               String
  email              String   @unique
  password           String
  nic                String   @unique
  cid                String   @unique
  phone              String   @unique
  dateRegistered     DateTime
  specialization     String
  verificationStatus Boolean
}

model AuthToken {
  tokenId        Int      @id @default(autoincrement())
  tokenValue     String   @unique
  userId         Int
  userRole       String
  tokenType      String
  ipAddress      String
  deviceInfo     String
  expirationTime DateTime
}

model Notification {
  notificationId   Int      @id @default(autoincrement())
  notificationType String
  userId           Int
  userRole         String
  content          Json
  date             DateTime
  read             Boolean
}

model Vehicle {
  vehicleId   Int      @id @default(autoincrement())
  vin         String   @unique
  ownerId     Int
  manufacture String
  model       String
  year        DateTime
}

model Report {
  reportId      Int      @id @default(autoincrement())
  ownerId       Int
  genaratedDate DateTime
  reportType    String
}

model Dispute {
  disputeId   Int      @id @default(autoincrement())
  serviceDate DateTime
  serviceType String
  ownerId     Int
  mechanicId  Int
  status      Boolean
  reviewedBy  Int
  discription String
}
